#!/bin/sh

prefix=/Work/OSSBuild/Build/Linux/x86/Release
exec_prefix=${prefix}
exec_prefix_set=no

gnutls_libs="-L/Work/OSSBuild/Build/Linux/x86/Release/bin -lgnutls  -L/Work/OSSBuild/Build/Linux/x86/Release/bin -lgcrypt -L/Work/OSSBuild/Build/Linux/x86/Release/lib -lgpg-error "
gnutls_cflags="-I/Work/OSSBuild/Build/Linux/x86/Release/include  -I/Work/OSSBuild/Build/Linux/x86/Release/include"
gnutls_la_file="/Work/OSSBuild/Build/Linux/x86/Release/bin/libgnutls.la"

usage()
{
	cat <<EOF
Usage: libgnutls-config [OPTIONS]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
	exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo "2.6.4"
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    --la-file)
      echo_la_file=yes
      ;;
    --help)
      usage 0
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
    echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
    echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
    if test "/Work/OSSBuild/Build/Linux/x86/Release/include" != "/usr/include" ; then
      includes="-I/Work/OSSBuild/Build/Linux/x86/Release/include"
      for i in $gnutls_cflags ; do
	if test "$i" = "-I/Work/OSSBuild/Build/Linux/x86/Release/include" ; then
	  includes=""
	fi
      done
    fi
    echo $includes $gnutls_cflags
fi

if test "$echo_la_file" = "yes"; then
    echo ${gnutls_la_file}
fi

if test "$echo_libs" = "yes"; then
    echo ${gnutls_libs}
fi



