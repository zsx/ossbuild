					<OSSBuild:Filter Include=".*\\[^\\]*.*gstcoreelements\.dll" />
					<OSSBuild:Filter Include=".*\\[^\\]*.*gstdecodebin\.dll" />
					<OSSBuild:Filter Include=".*\\[^\\]*.*gstdecodebin2\.dll" />
					<OSSBuild:Filter Include=".*\\[^\\]*.*gstffmpegcolorspace\.dll" />
