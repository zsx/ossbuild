					<OSSBuild:Filter Include=".*\\[^\\]*.*gstvolume\.dll" />
					<OSSBuild:Filter Include=".*\\[^\\]*.*gstvorbis\.dll" />
				</OSSBuild:FillDirectory>
			</Directory>
		</Directory>

	</Module>

</Wix>
