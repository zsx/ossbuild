<?xml version="1.0" encoding="UTF-8"?>

<?include $(var.InstallRoot)\Properties.wxi ?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<Module Id="Dependencies" Language="$(var.DEFAULT_LANGUAGE)" Version="$(var.OSSBUILD_VERSION)">

		<Package Id="$(var.GUID_X86_MSM_UGLY_GPL_PACKAGE)" Manufacturer="$(var.MANUFACTURER)" InstallerVersion="$(var.MINIMAL_INSTALLER_VERSION)" />

		<!-- Pull in libraries/files that don't depend on a particular license (LGPL vs. GPL) -->
		<ComponentGroupRef Id="PluginsUgly"/>

		<?define Files="
			lib$(var.PREFIX)gsta52dec.dll;
			lib$(var.PREFIX)gstdvdread.dll;
			lib$(var.PREFIX)gstlame.dll;
			lib$(var.PREFIX)gstmpeg2dec.dll;
			lib$(var.PREFIX)gstx264.dll
		" ?>

		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="MergeRedirectFolder">

				<?foreach file in $(var.Files) ?>
				<Component Id="$(ossbuild.createValidID($(var.file)))" Guid="$(ossbuild.stringToGUID($(ossbuild.trim($(var.file)))))">
					<File Source="$(var.GstPluginDir)\$(ossbuild.trim($(var.file)))" />
				</Component>
				<?endforeach ?>

			</Directory>
		</Directory>

		<?undef Files ?>

	</Module>

</Wix>
