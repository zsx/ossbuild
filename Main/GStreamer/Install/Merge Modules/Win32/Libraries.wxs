<?xml version="1.0" encoding="UTF-8"?>

<?include $(var.InstallRoot)\Properties.wxi ?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<Module Id="Dependencies" Language="$(var.DEFAULT_LANGUAGE)" Version="$(var.OSSBUILD_VERSION)">

		<Package Id="$(var.GUID_X86_MSM_LIBRARIES_PACKAGE)" Manufacturer="$(var.MANUFACTURER)" InstallerVersion="$(var.MINIMAL_INSTALLER_VERSION)" />

		<?define Files="
			libgstapp-$(var.GST_VERSION).dll;
			libgstaudio-$(var.GST_VERSION).dll;
			libgstbase-$(var.GST_VERSION).dll;
			libgstcdda-$(var.GST_VERSION).dll;
			libgstcontroller-$(var.GST_VERSION).dll;
			libgstdataprotocol-$(var.GST_VERSION).dll;
			libgstfarsight-$(var.GST_VERSION).dll;
			libgstfft-$(var.GST_VERSION).dll;
			libgstgl-$(var.GST_VERSION).dll;
			libgstinterfaces-$(var.GST_VERSION).dll;
			libgstnet-$(var.GST_VERSION).dll;
			libgstnetbuffer-$(var.GST_VERSION).dll;
			libgstpbutils-$(var.GST_VERSION).dll;
			libgstphotography-$(var.GST_VERSION).dll;
			libgstreamer-$(var.GST_VERSION).dll;
			libgstriff-$(var.GST_VERSION).dll;
			libgstrtp-$(var.GST_VERSION).dll;
			libgstrtsp-$(var.GST_VERSION).dll;
			libgstsdp-$(var.GST_VERSION).dll;
			libgsttag-$(var.GST_VERSION).dll;
			libgstvideo-$(var.GST_VERSION).dll
		" ?>

		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="MergeRedirectFolder">

				<?foreach file in $(var.Files) ?>
					<Component Id="$(ossbuild.createValidID($(var.file)))" Guid="$(ossbuild.stringToGUID($(ossbuild.trim($(var.file)))))">
						<File Source="$(var.GstBinDir)\$(ossbuild.trim($(var.file)))" />
					</Component>
				<?endforeach ?>

			</Directory>
		</Directory>

		<?undef Files ?>

	</Module>

</Wix>
