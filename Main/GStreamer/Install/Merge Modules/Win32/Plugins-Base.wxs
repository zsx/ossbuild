<?xml version="1.0" encoding="UTF-8"?>

<?include $(var.InstallRoot)\Properties.wxi ?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<Module Id="Dependencies" Language="$(var.DEFAULT_LANGUAGE)" Version="$(var.OSSBUILD_VERSION)">

		<Package Id="$(var.GUID_X86_MSM_PLUGINS_BASE_PACKAGE)" Manufacturer="$(var.MANUFACTURER)" InstallerVersion="$(var.MINIMAL_INSTALLER_VERSION)" />

		<?define Files="
			lib$(var.PREFIX)gstadder.dll;
			lib$(var.PREFIX)gstappplugin.dll;
			lib$(var.PREFIX)gstaudioconvert.dll;
			lib$(var.PREFIX)gstaudiorate.dll;
			lib$(var.PREFIX)gstaudioresample.dll;
			lib$(var.PREFIX)gstaudiotestsrc.dll;
			lib$(var.PREFIX)gstcoreelements.dll;
			lib$(var.PREFIX)gstdecodebin.dll;
			lib$(var.PREFIX)gstdecodebin2.dll;
			lib$(var.PREFIX)gstffmpegcolorspace.dll;
			lib$(var.PREFIX)gstgdp.dll;
			lib$(var.PREFIX)gstgio.dll;
			lib$(var.PREFIX)gstogg.dll;
			lib$(var.PREFIX)gstpango.dll;
			lib$(var.PREFIX)gstplaybin.dll;
			lib$(var.PREFIX)gstqueue2.dll;
			lib$(var.PREFIX)gsttheora.dll;
			lib$(var.PREFIX)gsttypefindfunctions.dll;
			lib$(var.PREFIX)gstvideorate.dll;
			lib$(var.PREFIX)gstvideoscale.dll;
			lib$(var.PREFIX)gstvideotestsrc.dll;
			lib$(var.PREFIX)gstvolume.dll;
			lib$(var.PREFIX)gstvorbis.dll
		" ?>

		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="MergeRedirectFolder">
						
				<?foreach file in $(var.Files) ?>
					<Component Id="$(ossbuild.createValidID($(var.file)))" Guid="$(ossbuild.stringToGUID($(ossbuild.trim($(var.file)))))">
						<File Source="$(var.GstPluginDir)\$(ossbuild.trim($(var.file)))" />
					</Component>
				<?endforeach ?>
						
			</Directory>
		</Directory>

		<?undef Files ?>

	</Module>

</Wix>
