.SH NAME
gnutls_global_set_log_level \- set the logging level
.SH SYNOPSIS
.B #include <gnutls/gnutls.h>
.sp
.BI "void gnutls_global_set_log_level(int " level ");"
.SH ARGUMENTS
.IP "int level" 12
